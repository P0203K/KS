        </select><br><br>
    
        <label for="date-time" value="dateTime">Date and Time:</label>
        <input type="datetime-local" id="date-time" required><br><br>
    
        <p style="font-size: 12px; color: #3c9e40;">Note: You must vaccinate your child within a time period of 60 minutes of scheduled time!</p>
    
        <label for="vaccine-name" value="vaccineName">Name of Vaccine:</label>
        <select id="vaccine-name" required></select><br><br>
        

        <button type="submit" id="book-slot" onclick="">Book Slot</button>


        <div class="popup-container" id="popup">
            <p>Your slot is booked successfully!</p>
            <button onclick="hidePopup()">Close</button>
        </div>

    </form>

    <script>
    
const hospitalDropdown = document.getElementById('hospital-dropdown');
const vaccineDropdown = document.getElementById('vaccine-name');

const hospitalVaccines = {
    hospital1: ["Measles and Mumps", "Chicken-Pox"],
    hospital2: ["Rota Virus", "Diphtheria"],
    hospital3: ["Measles", "Rubella"],
    hospital4: ["Jaundice", "Diphtheria"],
    hospital5: ["Measles", "Diarrhoea"]
};

hospitalDropdown.addEventListener('change', (event) => {
    const selectedHospital = event.target.value;
    const vaccines = hospitalVaccines[selectedHospital];
    
    //vaccineDropdown.innerHTML = '';

    vaccines.forEach(vaccine => {
        const option = document.createElement('option');
        option.value = vaccine;
        option.textContent = vaccine;
        vaccineDropdown.appendChild(option);
    });
});
document.getElementById('book-slot').addEventListener('click'), async function() {
