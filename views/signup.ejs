      font-family: 'Mooli', sans-serif;
      text-shadow: 2px 2px 4px rgba(8, 11, 85, 0.5);
  
  }
  
  #reg{
      width: 50%;
      background-color: rgb(8, 44, 81);
      color: #fff;
      border: none;
      padding: 10px;
      border-radius: 3px;
      cursor: pointer;
      margin-top: 10px;
      margin-left: 150px;
      height: 40px;
      font-size: 18px;
      letter-spacing: 1px;
      font-weight: 600;
      font-family: 'Mooli', sans-serif;
      text-shadow: 2px 2px 4px rgba(8, 11, 85, 0.5);
  }
  
  #reg:hover {
      background-color: #0056b3;
  }
  
  .error-message {
      color: red;
      font-size: 12px;
  }
  
  .required {
      color: red;
      /* Change the color as needed */
      margin-left: 2px;
      /* Adjust the margin for spacing */
  }
        </style>
