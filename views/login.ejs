<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Mooli&display=swap" rel="stylesheet">
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
        }

        body {
            /* background-image: url('gif.gif');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center center;
            background-attachment: fixed; */
            /* backdrop-filter: blur(10px); */
            width: 100%;
            height: 100%;
        }

        /* .gif{
            width: 100%;
            height: 100%;
            filter: blur(10px);
        } */

        .container {
            width: 1000px;
            height: 600px;
            border: 2px solid black;
            margin-left: auto;
            margin-right: auto;
            margin-top: 80px;
            background-image: url('https://media.istockphoto.com/id/1400343606/photo/vaccine-and-injection-3d-rendering.webp?b=1&s=170667a&w=0&k=20&c=X42HkGVK89CIx456mONPrbAPKezO-hetmZDnQbB2T-w=');
            background-repeat: no-repeat;
            background-size: cover;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .login-form {
            width: 402px;
            height: 597px;
            margin-left: -400px;
            /* border: 1px solid black; */
            filter: none;
            z-index: 2;
            position: absolute;
            left: 54rem;
            background-color: white;
            /* border-left: 1px solid black; */
        }

        h1 {
            text-align: center;
            padding-top: 90px;
            color: rgb(9 50 118);
            font-family: 'Mooli', sans-serif;
            text-shadow: 2px 2px 4px rgba(99, 94, 94, 0.5);
        }

        .login-2 {
            margin-top: 50px;
            width: 300px;
            height: 300px;
            border: 1px solid black;
            margin-left: auto;
            margin-right: auto;
        }

        .form-group {
            padding-top: 30px;
            padding-left: 22px;
        }

        #username,
        #password {
            width: 220px;
            height: 40px;
            padding-left: 20px;
            margin-left: 13px;
            font-family: 'Mooli', sans-serif;
            font-size: 15px;
        }

        #submit {
            margin-top: 10px;
            width: 250px;
            height: 38px;
            background-color: rgb(8, 59, 114);
            /* color: rgb(9 50 118); */
            color: white;
            font-size: 18px;
            font-weight: 600;
            letter-spacing: 1px;
            font-family: 'Mooli', sans-serif;
            text-shadow: 2px 2px 4px rgba(8, 11, 85, 0.5);
        }

        #submit:hover {
            background-color: #0056b3;
            /* color: grey; */
            cursor: pointer;
        }

        .user {
            font-family: 'Mooli', sans-serif;
            /* text-align: center; */
            margin-top: 35px;
            font-size: 16px;
            margin-left: 23px;
            color: rgb(9 50 118);
            font-weight: 500;
        }

        .span {
            float: right;
            margin-right: 28px;
        }

        .span:hover {
            color: rgb(9 50 118);
            cursor: pointer;
            font-weight: 600;
        }

        a {
            text-decoration: none;
            color: rgb(9 50 118);
            font-weight: 500;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="login-form">
            <h1>KiddoShield</h1>
            <form action="/login" method="POST">
                <div class="login-2">
                    <div class="form-group">
                        <i class="fas fa-user"></i>
                        <input type="text" id="username" name="username" placeholder="Username" required>
                    </div>
                    <div class="form-group">
                        <i class="fas fa-lock"></i>
                        <input type="password" id="password" name="password" placeholder="Password" 
                            required>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" id="submit">
                    </div>
                    <p class="user">New User? <a href="signup" target="_blank"><span class="span">Register
                                now</span></a></p>
                </div>

            </form>

        </div>
    </div>
    <script>
        function validateForm() {
            var password = document.getElementById("password").value;
            var confirmPassword = document.getElementById("confirmPassword").value;
            var passwordError = document.getElementById("passwordError");
            var confirmPasswordError = document.getElementById("confirmPasswordError");

            var uppercaseRegex = /[A-Z]/;
            var specialCharacterRegex = /[!@#$%^&*()_+{}\[\]:;<>,.?~\\-]/;
            var numberRegex = /\d/;

            if (!uppercaseRegex.test(password) || !specialCharacterRegex.test(password) || !numberRegex.test(password)) {
                passwordError.innerHTML = "(Password must contain at least one uppercase letter, one special character, and one number)";
                return false;
            } else {
                passwordError.innerHTML = "";
            }

            if (password !== confirmPassword) {
                confirmPasswordError.innerHTML = "(Passwords do not match)";
                return false;
            } else {
                confirmPasswordError.innerHTML = "";
            }

            return true;
        }

    </script>
</body>

</html>